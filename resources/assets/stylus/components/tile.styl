.tile
	width 200px
	height 200px
	min-width 100px
	min-height 100px
	position relative
	background #f7f7f7

	&:hover
		background #fff

.portal
	position relative
	display flex
	flex-direction column
	height 100%
	padding 10px 0
	border 1px solid #f7f7f7

	&-header
		color #fff
		background #212121

		&-name
			font-size 16px

		&-version
			color #c5c5c5
			font-size 12px
			text-align right

	&-info
		font-size 12px

	&-type
		position absolute
		right 0
		bottom 0
		display inline-block

	&-status
		position relative

		&-text
			font-size 20px
			text-transform uppercase

		&-dot
			position absolute
			right 0
			top 0
			width 15px
			height 15px
			border-radius 50%

			&-green
				background #3c763d
				border 1px solid #3c763d

			&-yellow
				background #E7F400
				border 1px solid #E7F400

			&-white
				background #d4d4d4
				border 1px solid #d4d4d4